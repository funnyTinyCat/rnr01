 <p style="color: green"><% notice %></p> 

<h1>Friends</h1>

<% if user_signed_in? %>

  <div id="friends">
    <% @friends.each do |friend| %>
      <%= render friend %>
      <p>
        <% link_to "Show this friend", friend %>
      </p>
    <% end %>
  </div>

  <%= link_to "New friend", new_friend_path, class:"btn btn-success" %>

<% else %>

  <h1>Home#index</h1>
  <p>Find me in app/views/home/index.html.erb</p>

<% end %>
